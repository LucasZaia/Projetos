@model Projetos.Data.User

@{
    ViewData["Title"] = "Privacy Policy";
}

<div>
    <a asp-action="Index" style="text-decoration: none; color: black; 
    display: block; margin-bottom: 20px; font-size: 20pt;"><i class="fas fa-arrow-left"></i></a>
</div>
<h4>Cadastrar</h4>
<hr />
<div class="row">
        
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text " id="basic-addon1"><i class="fas fa-user"></i></span>
                        <input type="text" asp-for="nome" class="form-control" placeholder="Insira seu Nome" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text " id="basic-addon1"><i class="fas fa-lock"></i></span>
                        <input type="password" asp-for="senha" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="form-group">
                
                <button type="submit" value="Adicionar" class="btn btn-primary"><i class="fas fa-plus"></i> Adicionar</button>
            </div>
        </form>
    </div>
</div>

